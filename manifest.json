{
  "manifest_version": 3,
  "name": "Youtube Video Transcript Traverser",
  "description": "Search through a YouTube video for keywords and get timestamps and be able to jump to that relevant section/time on the video.",
  "version": "1.0",
  "author": "ATEOTG",
  "host_permissions": ["*://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["dist/bundle.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "/assets/icon128.png",
      "32": "/assets/icon128.png",
      "48": "/assets/icon128.png",
      "128": "/assets/icon128.png"
    },
    "default_title": "Youtube Video Traverser",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  }
}
